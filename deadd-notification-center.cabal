cabal-version:       2.4
name:                deadd-notification-center
version:             1.7.3
synopsis:            A notification daemon and center
description:         A customizable notification center for linux. Notifications are recieved via DBUS (like any notification daemon) and shown in the upper right corner of the screen. A notification center can be shown, that displays the last notifications and optionally some user defined buttons. The notification center supports true transparancy.
homepage:            https://github.com/phuhl/linux-notification-center#readme
license:             BSD-3-Clause
license-file:        LICENSE
author:              Philipp Uhl
maintainer:          git@ph-uhl.com
copyright:           2017 Philipp Uhl
category:            Web
build-type:          Simple
extra-source-files:  README.org
                   , notification_center.glade
                   , notification.glade
                   , notification_in_center.glade
                   , style.css

library
  hs-source-dirs:      src
  exposed-modules:     NotificationCenter
                     , Config
                     , NotificationCenter.NotificationInCenter
                     , NotificationCenter.Button
                     , NotificationCenter.Notification.Glade
                     , NotificationCenter.Notifications
                     , NotificationCenter.Notifications.Data
                     , NotificationCenter.Notifications.Action
                     , NotificationCenter.Notifications.AbstractNotification
                     , NotificationCenter.Notifications.NotificationPopup
                     , NotificationCenter.Notifications.Notification.Glade
                     , NotificationCenter.Glade
                     , TransparentWindow
                     , Helpers
  build-depends:       base >= 4.7 && < 5
                     , regex-tdfa
                     , transformers
                     , filepath
                     , haskell-gi
                     , haskell-gi-base
                     , gi-cairo
                     , gi-pango
                     , gi-glib >= 2.0.17
                     , gi-gdk
                     , gi-gdkpixbuf
                     , gi-gtk >= 3.0.19
                     , gi-gio
                     , time
                     , env-locale
                     , gi-gobject
                     , text
                     , bytestring
                     , ConfigFile
                     , mtl
                     , dbus >= 1.0.1 && < 2
                     , containers
                     , unix
                     , stm >= 2.5.0.0
                     , here
                     , hdaemonize
                     , directory
                     , process
                     , tagsoup >= 0.14.7
                     , tuple
                     , split
                     , setlocale
                     , lens
  default-language:    Haskell2010

executable deadd-notification-center
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , deadd-notification-center
  default-language:    Haskell2010

test-suite deadd-notification-center-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , deadd-notification-center
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/phuhl/linux-notification-center
